<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_trans_list_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >



    <ListView
        android:id="@+id/trans_list"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1">
    </ListView>
    <Button android:id="@+id/trans_save" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/save" android:layout_gravity="center"/>

</LinearLayout>