<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_round"
    android:padding="10dip" >

    <TextView
        android:id="@+id/trans_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium" android:text="Name"/>

    <TextView
        android:id="@+id/trans_list_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceMedium" android:text="100"/>

    <TextView
        android:id="@+id/trans_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_below="@+id/trans_list_name"
        android:textAppearance="?android:attr/textAppearanceSmall" android:text="Type"/>
    <TextView android:id="@+id/trans_list_date" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" android:text="date"
              android:layout_alignTop="@+id/trans_list_type"
              android:layout_alignParentEnd="false" android:layout_alignParentStart="false"
              android:layout_alignParentRight="true"/>
    <TextView android:id="@+id/rs" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/rs"
              android:layout_above="@+id/trans_list_date" android:layout_toLeftOf="@+id/trans_list_amount"
              android:layout_marginRight="12dp"/>

</RelativeLayout>