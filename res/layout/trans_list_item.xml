<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_round"
    android:padding="10dip" >

    <TextView
        android:id="@+id/trans_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium" android:text="Name"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="date"
            android:id="@+id/trans_list_item_date"
            android:layout_below="@+id/trans_list_item_name"/>

    <TextView
            android:id="@+id/trans_list_item_rs"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/rs"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:layout_toLeftOf="@+id/trans_list_item_amount"
            />

    <TextView
            android:id="@+id/trans_list_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="100"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/debit"
            android:id="@+id/trans_list_item_type"
            android:layout_below="@+id/trans_list_item_name"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>